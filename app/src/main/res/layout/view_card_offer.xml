<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="offer"
            type="com.glima.getninjas.ui.model.OfferCardViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{offer.title}"
                android:textSize="22sp"
                tools:text="TITULO DA OFERTA" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_below="@id/title"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/dash_line"
                android:layerType="software"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@{offer.userName}"
                tools:text="Fulano de Tal" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/divider"
                android:drawableLeft="@drawable/ic_date"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@{offer.date}"
                tools:text="8 de outubro" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/user_name"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_place"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="@{offer.requestingLocal}"
                tools:text="Nova IguaÃ§u - Rio de Janeiro" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>

